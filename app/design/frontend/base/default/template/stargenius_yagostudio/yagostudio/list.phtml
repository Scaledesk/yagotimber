<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php $_yagostudios = $this->getYagostudios(); ?>
<div class="page-title yagostudio-title">
    <h1><?php echo Mage::helper('stargenius_yagostudio')->__('Yagostudios') ?></h1>
