<?php if ($_yagostudios->getSize() > 0) :?>
    <?php echo $this->getPagerHtml(); ?>
    <div class="yagostudio-list-container">
    <?php foreach ($_yagostudios as $_yagostudio) : ?>
        <div class="yagostudio-list-item">
            <a href="<?php echo $_yagostudio->getYagostudioUrl()?>">
                <?php echo $_yagostudio->getDesignerName();?>
            </a><br />
        </div>
    <?php endforeach;?>
    </div>
    <?php echo $this->getPagerHtml(); ?>
<?php else : ?>
    <?php echo Mage::helper('stargenius_yagostudio')->__('There are no yagostudios at this moment');?>
<?php endif;?>
